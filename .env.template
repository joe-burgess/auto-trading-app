# Coinbase Pro API Configuration
# Copy this file to .env and fill in your actual API credentials

# Coinbase Pro API Credentials
# Get these from: https://pro.coinbase.com/profile/api
COINBASE_API_KEY=your_api_key_here
COINBASE_API_SECRET=your_api_secret_here
COINBASE_PASSPHRASE=your_passphrase_here

# Trading Configuration
TRADING_DRY_RUN=true
TRADING_SANDBOX=true
MAX_TRADE_AMOUNT=0.01

# Bank Account Details (for withdrawals)
BANK_PAYMENT_METHOD_ID=your_bank_payment_method_id

# Security Settings
REQUIRE_CONFIRMATION=true
ENABLE_LOGGING=true

# WARNING: Never commit your actual .env file to version control!
# Add .env to your .gitignore file